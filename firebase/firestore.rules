rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  match /user/{userId} {
   		allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
		}
    match /user/{userId}/sms/{document=**} {
   		allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
		}
    match /user/{userId}/calllog/{document=**} {
   		allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
		}
  }
}